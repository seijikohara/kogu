{
	"name": "kogu",
	"version": "0.0.5",
	"description": "Kogu - A collection of useful developer tools (小道具 - props for developers)",
	"type": "module",
	"author": "seijikohara",
	"keywords": [
		"developer-tools",
		"utilities",
		"kogu",
		"小道具"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/seijikohara/kogu"
	},
	"scripts": {
		"prepare": "lefthook install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && bun run validate:pages",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"validate:pages": "bun run scripts/validate-pages.ts",
		"build:sidecar": "bun run scripts/build-sidecar.ts",
		"build:sidecar:release": "bun run scripts/build-sidecar.ts --release",
		"tauri": "tauri",
		"tauri:dev": "bun run build:sidecar && tauri dev",
		"tauri:build": "bun run build:sidecar:release && tauri build",
		"release": "bun run scripts/release.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"deps:check": "bunx taze",
		"deps:check:backend": "cargo install cargo-edit -q && cd src-tauri && cargo upgrade --dry-run",
		"deps:update": "bunx taze -w && bun install",
		"deps:update:backend": "cargo install cargo-edit -q && cd src-tauri && cargo upgrade && cargo update",
		"deps:update:all": "bun run deps:update && bun run deps:update:backend"
	},
	"license": "MIT",
	"dependencies": {
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@tauri-apps/api": "^2.10.1",
		"@tauri-apps/plugin-clipboard-manager": "^2.3.2",
		"@tauri-apps/plugin-dialog": "^2.6.0",
		"@tauri-apps/plugin-fs": "^2.4.5",
		"@tauri-apps/plugin-opener": "^2.5.3",
		"@tauri-apps/plugin-os": "^2.3.2",
		"@tiptap/core": "^3.19.0",
		"@tiptap/extension-bubble-menu": "^3.19.0",
		"@tiptap/extension-code-block-lowlight": "^3.19.0",
		"@tiptap/extension-image": "^3.19.0",
		"@tiptap/extension-link": "^3.19.0",
		"@tiptap/extension-mathematics": "^3.19.0",
		"@tiptap/extension-placeholder": "^3.19.0",
		"@tiptap/extension-table": "^3.19.0",
		"@tiptap/extension-table-cell": "^3.19.0",
		"@tiptap/extension-table-header": "^3.19.0",
		"@tiptap/extension-table-row": "^3.19.0",
		"@tiptap/extension-task-item": "^3.19.0",
		"@tiptap/extension-task-list": "^3.19.0",
		"@tiptap/pm": "^3.19.0",
		"@tiptap/starter-kit": "^3.19.0",
		"@tiptap/suggestion": "^3.19.0",
		"@viz-js/viz": "^3.24.0",
		"@xml-tools/ast": "^5.0.5",
		"@xml-tools/parser": "^1.0.11",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"crypto-js": "^4.2.0",
		"json5": "^2.2.3",
		"jsonc-parser": "^3.3.1",
		"katex": "^0.16.28",
		"lowlight": "^3.3.0",
		"markdown-it": "^14.1.0",
		"markdown-it-texmath": "^1.0.0",
		"mermaid": "^11.12.2",
		"monaco-editor": "^0.52.2",
		"monaco-yaml": "^5.4.0",
		"node-sql-parser": "^5.4.0",
		"sql-formatter": "^15.7.0",
		"tailwindcss": "^4.1.18",
		"tippy.js": "^6.3.7",
		"tiptap-extension-global-drag-handle": "^0.1.18",
		"tiptap-markdown": "0.9.0",
		"xml-formatter": "^3.6.7",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.562.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tauri-apps/cli": "^2.10.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/crypto-js": "^4.2.2",
		"@types/katex": "^0.16.8",
		"@types/markdown-it": "^14.1.2",
		"bits-ui": "^2.15.5",
		"bun-types": "^1.3.9",
		"clsx": "^2.1.1",
		"jsdom": "^27.4.0",
		"lefthook": "^2.1.0",
		"mode-watcher": "^1.1.0",
		"paneforge": "^1.0.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "~5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-monaco-editor": "^1.1.0",
		"vitest": "^4.0.18"
	}
}
