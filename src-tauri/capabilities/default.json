{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"core:window:allow-close",
		"core:window:allow-center",
		"core:window:allow-minimize",
		"core:window:allow-maximize",
		"core:window:allow-toggle-maximize",
		"core:window:allow-start-dragging",
		"core:window:allow-is-maximized",
		"core:window:allow-set-size",
		"core:window:allow-set-focus",
		"opener:default",
		"clipboard-manager:allow-read-text",
		"clipboard-manager:allow-write-text",
		"dialog:allow-open",
		"dialog:allow-save",
		"fs:allow-read-text-file",
		"fs:allow-write-text-file",
		"decorum:allow-show-snap-overlay",
		{
			"identifier": "shell:allow-spawn",
			"allow": [
				{ "name": "binaries/worker", "sidecar": true },
				{ "name": "binaries/net-scanner", "sidecar": true }
			]
		},
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{ "name": "osascript", "cmd": "osascript", "args": true },
				{ "name": "pkexec", "cmd": "pkexec", "args": true },
				{ "name": "setcap", "cmd": "setcap", "args": true },
				{ "name": "getcap", "cmd": "getcap", "args": true }
			]
		},
		"shell:allow-kill",
		"window-state:allow-restore-state",
		"window-state:allow-save-window-state",
		"dialog:allow-confirm"
	]
}
